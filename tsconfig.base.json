{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "@my-workspace/source"
    ],
    "paths": {
      "@my-workspace/my-new-lib": [
        "libs/my-new-lib/src/index.ts"
      ],
      "@my-workspace/my-new-lib/*": [
        "libs/my-new-lib/src/*"
      ],
      "@my-workspace/tmo-components": [
        "libs/tmo-components/src/index.ts"
      ],
      "@my-workspace/tmo-components/*": [
        "libs/tmo-components/src/*"
      ]
    }
  }
}